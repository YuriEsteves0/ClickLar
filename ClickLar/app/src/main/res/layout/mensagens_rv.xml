<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp">

    <TextView android:id="@+id/mensagemUsuVerde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:background="@drawable/rounded_corners_chat"
        android:textColor="@color/white"
        android:layout_marginStart="15dp"
        android:backgroundTint="@color/verdePrimario"
        android:text=""/>

    <TextView android:id="@+id/mensagemUsuLaranja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/rounded_corners_chat"
        android:textColor="@color/white"
        android:backgroundTint="@color/laranjaPrimario"
        android:layout_alignParentEnd="true"
        android:text=""/>

</RelativeLayout>